<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_layout_movie_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/movie_title"
        android:textSize="48sp"
        android:text="Chappie"
        android:textColor="@color/colorWhite"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@color/colorDarkTurquoise"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/movie_thumbnail"
        />
    
    <ImageView
        android:paddingLeft="24dp"
        android:layout_marginTop="8dp"
        android:paddingTop="8dp"
        android:id="@+id/movie_thumbnail"
        android:src="@drawable/temp"
        android:adjustViewBounds="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/movie_title"
        app:layout_constraintBottom_toTopOf="@+id/overview" />

    <TextView
        android:id="@+id/overview"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:layout_width="368dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_thumbnail" />

    <TextView
        android:id="@+id/release_date"
        android:textSize="28sp"
        android:text="2007"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toRightOf="@+id/movie_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/movie_title"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/run_time"
        android:textSize="24sp"
        android:text="120min"
        android:textStyle="bold|italic"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toRightOf="@+id/movie_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/release_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/user_rating"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:text="8.1/10"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toRightOf="@+id/movie_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/run_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp" />

</android.support.constraint.ConstraintLayout>
